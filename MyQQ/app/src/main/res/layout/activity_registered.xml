<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context="com.example.a82.myapplication.Activity.RegisteredActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:src="@mipmap/welcom_logo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:background="@drawable/editshape"
        android:hint="用户名" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550px"
        android:background="@drawable/editshape"
        android:hint="密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pwd1"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700px"
        android:background="@drawable/editshape"
        android:hint="确认密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registered"
        android:textSize="20sp"
        android:text="注册"
        android:textColor="#fff"
        android:background="#4876FF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="850px"
        android:layout_width="650px"
        android:layout_height="110px" />
    <ImageView
        android:layout_marginRight="30px"
        android:layout_marginBottom="25px"
        android:src="@mipmap/icon_account"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignBottom="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:id="@+id/imageView" />
    <ImageView
        android:layout_marginBottom="30px"
        android:src="@mipmap/icon_pwd"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignBottom="@+id/pwd"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView2" />
    <ImageView
        android:src="@mipmap/icon_pwd"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignTop="@+id/pwd1"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="10dp" />
</RelativeLayout>
